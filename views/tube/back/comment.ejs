<html>
<script src="https://cdn.tailwindcss.com"></script>

<body class="bg-gray-900 text-white">
  <div class="mt-4 p-4 bg-gray-800 rounded-lg shadow-lg">
    <div class="mt-2 space-y-4">
      <% cm.comments.contents.filter(c => c.comment).forEach(CommentThread => { %>   
        <div class="flex items-start bg-gray-700 p-4 rounded-lg transition-transform transform hover:scale-105">
          <img loading="lazy" src="<%= CommentThread.comment?.author.thumbnails[0].url %>" class="w-10 h-10 rounded-full">
          <div class="ml-3">
            <p class="text-sm font-semibold">
              <a href="/c/<%= CommentThread.comment?.author.id %>" target="_blank" class="text-blue-400 hover:underline"><%= CommentThread.comment?.author.name || "(Unable to parse author name)" %></a>
            </p>
            <p class="text-gray-300 text-sm mt-1">
              <%- (CommentThread.comment?.content.text || "(Unable to parse comment)").replace(/\n/g, "<br>") %>
            </p>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>