<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>適当なチャンネル - チャンネル</title>
    <link rel="stylesheet" href="/css/page.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

</head>
<body class="bg-gray-900 text-white">
    <div class="container mx-auto p-4 pt-24">
        <!-- カバー画像 -->
        <div class="w-full h-auto bg-gray-700 flex items-center justify-center text-xl">カバー画像</div>
        
        <!-- チャンネル情報 -->
        <div class="bg-gray-800 p-8 rounded-lg shadow-lg mt-4">
            <div class="flex items-center mb-6">
                <img src="https://via.placeholder.com/80" class="w-20 h-20 rounded-full mr-4">
                <div>
                    <h1 class="text-3xl font-bold">適当なチャンネル</h1>
                    <p class="text-gray-400 text-sm">これは適当なチャンネルの説明です。</p>
                    <p class="text-gray-500 text-sm mt-2">100万 subscribers • 500 videos</p>
                </div>
            </div>
        </div>
      
        <!-- タブナビゲーション -->
<div class="mt-6">
    <!-- プルダウンメニュー -->
    <div class="relative inline-block w-full">
        <label for="shelfSelector" class="block text-white text-lg font-bold mb-2">カテゴリを選択:</label>
        <button id="dropdownButton" class="bg-gray-800 text-white px-4 py-2 rounded w-full text-left" onclick="toggleDropdown()">
            <span id="selectedTab"><%= channel.shelves[0].title.text %></span>
            <span class="float-right">▼</span>
        </button>
        <ul id="dropdownMenu" class="absolute w-full bg-gray-800 text-white mt-2 rounded hidden z-10">
            <% channel.shelves?.forEach((shelf, index) => { %>
                <li class="p-2 hover:bg-gray-700 cursor-pointer" onclick="selectTab('<%= shelf.title.text %>', <%= index %>)">
                    <%= shelf.title.text %>
                </li>
            <% }); %>
        </ul>
    </div>
    
    <!-- 動画リスト -->
    <% channel.shelves?.forEach((shelf, index) => { %>
        <div class="shelf-content mt-4 <%= index === 0 ? '' : 'hidden' %>" id="shelf-<%= index %>" data-tab-index="<%= index %>">
            <h2 class="text-xl font-bold text-white mb-2"><%= shelf.title.text %></h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5">
                <% shelf.content?.items?.forEach(video => { %>
                    <div class="result-item bg-gray-700 p-4 rounded">
                        <a href="/wkt/watch/<%= video.videoId %>" class="thumbnail">
                            <img loading="lazy" src="<%= video.thumbnail %>" alt="<%= video.title %>" class="w-auto h-48 rounded">
                            <span class="video-duration"><%= video.duration %></span>
                        </a>
                        <p class="text-lg font-bold mt-2 text-white"><%= video.title %></p>
                        <p class="text-xs text-gray-400"><%= video.views %>回視聴 - <%= video.uploaded %></p>
                    </div>
                <% }); %>
            </div>
        </div>
    <% }); %>
</div>

     </div>

    
    <script>
    const dropdownButton = document.getElementById("dropdownButton");
    const dropdownMenu = document.getElementById("dropdownMenu");
    const selectedTab = document.getElementById("selectedTab");
    const shelves = document.querySelectorAll(".shelf-content");

    dropdownButton.addEventListener("click", () => {
        dropdownMenu.classList.toggle("hidden");
    });

    function selectTab(title, index) {
        selectedTab.textContent = title;
        dropdownMenu.classList.add("hidden");
        shelves.forEach((shelf, i) => {
            shelf.classList.toggle("hidden", i !== index);
        });
    }

    document.addEventListener("click", (event) => {
        if (!dropdownButton.contains(event.target) && !dropdownMenu.contains(event.target)) {
            dropdownMenu.classList.add("hidden");
        }
    });
</script>

</body>
</html>
